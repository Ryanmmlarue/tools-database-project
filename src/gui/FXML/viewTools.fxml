<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewToolsController">
    <children>
        <VBox alignment="CENTER">
            <children>
                <Label text="Tools" underline="true">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Label>
                <Label text="Double click on a tool to modify">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        <TableView fx:id="table" onMouseClicked="#gotoModifyTool" prefHeight="450.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="125.0" resizable="false" sortable="false" text="Name" />
                <TableColumn fx:id="priceColumn" prefWidth="125.0" resizable="false" sortable="false" text="Price" />
                <TableColumn fx:id="lendableColumn" prefWidth="125.0" resizable="false" sortable="false" text="Lendable" />
                <TableColumn fx:id="purchasableColumn" prefWidth="125.0" resizable="false" sortable="false" text="Purchasable" />
                <TableColumn fx:id="categoriesColumn" prefWidth="300.0" resizable="false" sortable="false" text="Categories" />
            </columns>
        </TableView>
        <HBox>
            <children>
                <Button mnemonicParsing="false" onAction="#gotoHome" prefHeight="30.0" prefWidth="75.0" text="Back" />
            </children>
            <padding>
                <Insets left="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>
