<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewToolsController">
   <children>
      <VBox alignment="CENTER">
         <children>
            <Label text="Tools" underline="true">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Label text="Click on a tool to modify">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <TableView prefHeight="350.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="100.0" text="Name" />
            <TableColumn prefWidth="100.0" text="Price" />
          <TableColumn prefWidth="100.0" text="Lendable" />
            <TableColumn prefWidth="100.0" text="Purchasable" />
            <TableColumn prefWidth="200.0" text="Category" />
        </columns>
      </TableView>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#gotoHome" prefHeight="30.0" prefWidth="75.0" text="Back" />
            <Button layoutX="20.0" layoutY="10.0" mnemonicParsing="false" onAction="#gotoModifyTool" prefHeight="30.0" prefWidth="306.0" text="PLACEHOLDER TO ACCESS MODIFY TOOLS SCENE" />
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
