<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.BalanceController">
   <children>
      <Label text="Balance" underline="true">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Label text="Current Balance: $" />
            <TextField fx:id="balanceTextField" alignment="CENTER_RIGHT" disable="true">
               <HBox.margin>
                  <Insets />
               </HBox.margin></TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Button fx:id="addOneButton" layoutX="242.0" layoutY="10.0" mnemonicParsing="false" onAction="#updateBalance" text="Add $1" />
            <Button fx:id="addFiveButton" mnemonicParsing="false" onAction="#updateBalance" text="Add $5" />
            <Button fx:id="addTenButton" layoutX="180.0" layoutY="10.0" mnemonicParsing="false" onAction="#updateBalance" text="Add $10" />
            <Button fx:id="addTwentyButton" layoutX="225.0" layoutY="10.0" mnemonicParsing="false" onAction="#updateBalance" text="Add $20" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#gotoHome" prefHeight="30.0" prefWidth="75.0" text="Back" />
         </children>
      </HBox>
   </children>
</VBox>
